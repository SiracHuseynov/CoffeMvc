@using CoffeeMVC.Core.Models
@model List<Slider>
@{
    int counter = 1;
}

<div class="container">
    <div class="row mb-3">
        <div class="col-3">
            <a asp-action="Create" asp-controller="Slider" class="btn btn-outline-primary">Create</a>
        </div>
    </div>
    <div class="row">
        <div class="col-12">
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Id</th>
                        <th scope="col">Title</th>
                        <th scope="col">Description</th>
                        <th scope="col">RedirectUrl</th> 
                        <th scope="col">Image</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <th scope="row">@(counter++)</th>
                            <td>@item.Id</td>
                            <td>@item.Title</td>
                            <td>@item.Description</td>
                            <td>@item.RedirectUrl</td>
                            <td><img src="~/uploads/sliders/@item.ImageUrl" /></td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
